page {
  background-color: #e6e8ed;
}

.wrap-scroll {
  width: 100%;
  position: absolute;
  top: 60rpx;
  /* white-space: nowrap; */
}

.header-view {
  position: fixed;
  top: 0;
  z-index: 3;
}

.mark-line {
  height: 60rpx;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: bold;
  color: grey;
  width: 100%;
  border-bottom: 2rpx solid #e6e8ed;
}

.video-container {
  margin-top: 20rpx;
  display: flex;
  width: 100%;
  flex-wrap: wrap;
}

.middle {
  margin-top: 20rpx;
}

.img-box {
  background-color: white;
  border: 2rpx solid #a0a6aa;
  height: 150rpx;
  width: 220rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
  margin-left: 20rpx;
  position: relative;
}

.submit-btn {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 2;
}

.video-title {
  position: relative;
  font-size: 21rpx;
  color: grey;
  margin-top: 16rpx;
  z-index: 2;
}

.img-box image {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 220rpx;
  height: 140rpx;
  z-index: 1;
}

.blank-view {
  height: 30rpx;
  width: 100%;
}
