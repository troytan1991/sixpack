.body-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
  margin-top: 10rpx;
  font-size: 35rpx;
}

.body-container view {
  height: 80rpx;
  border-bottom: 2rpx solid #f2eeee;
  display: flex;
  align-items: center;
  width: 100%;
}

.body-container image {
  width: 50rpx;
  height: 50rpx;
  margin: 10rpx;
}

.navigate-img {
  position: absolute;
  right: 20rpx;
}

.opacity-btn {
  position: absolute;
  left: 0;
  width: 100%;
  height: 80rpx;
  opacity: 0;
  z-index: 2;
}

.reward-view {
  margin-top: 90rpx;
  width: 100%;
  bottom: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.reward-btn {
  border-radius: 60rpx;
  height: 120rpx;
  width: 120rpx;
  display: flex;
  align-items: center;
  font-size: 40rpx;
  justify-content: center;
}

.reward-view text {
  color: grey;
  font-size: 30rpx;
  margin-top: 20rpx;
}
