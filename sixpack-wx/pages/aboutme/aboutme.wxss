page {
  background-color: #e6e8ed;
}

.user-container {
  width: 100%;
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 400rpx;
}

.user-box {
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  overflow: hidden;
  display: block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.user-name{
  font-size: 30rpx;
  color: grey;
}

