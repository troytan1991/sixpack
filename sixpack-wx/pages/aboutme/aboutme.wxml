<view class="user-container">
  <image class='back-img' src='/asset/icon/background.png'></image>
  <view class='user-box'>
    <view class='user-avatar'>
      <open-data class='avatar-img' type="userAvatarUrl"></open-data>
    </view>
    <view class='user-name'>
      <open-data  type="userNickName"></open-data>
    </view>
  </view>
</view>
<view class='body-container'>
  <view class='setting-view' bindtap='openSetting'>
    <image src='/asset/icon/setting.png'></image>
    <text>设置</text>
    <image class='navigate-img' src='/asset/icon/navigate.png'></image>
  </view>
  <view class='feedback-view'>
    <image src='/asset/icon/feedback.png'></image>
    <text>意见反馈</text>
    <image class='navigate-img' src='/asset/icon/navigate.png'></image>
    <button class='opacity-btn' open-type='feedback'></button>
  </view>
  <view class='contact-view'>
    <image src='/asset/icon/contact.png'></image>
    <text>客服</text>
    <image class='navigate-img' src='/asset/icon/navigate.png'></image>
    <button class='opacity-btn' open-type='contact'></button>
  </view>
</view>
<view class='reward-view'>
  <button class='reward-btn' bindtap='onRewardTap' type='warn'>赏</button>
  <text>支持升级一下服务器吧</text>
</view>