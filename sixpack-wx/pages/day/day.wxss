.vocation-text {
  width: 100%;
  height: 700rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #0eaaed;
}

.main-video {
  width: 100%;
  height: 423rpx;
  border-bottom: 2rpx solid #a0a6aa;
}

.process-scroll {
  width: 100%;
  padding: 20rpx 0;
  display: flex;
  white-space: nowrap;
  background-color: #0eaaed;
}

.exc-box {
  display: inline-block;
  position: relative;
  margin-left: 20rpx;
  height: 200rpx;
}

.img-box {
  background-color: white;
  border: 2rpx solid #a0a6aa;
  height: 150rpx;
  width: 220rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.img-box image {
  position: absolute;
  width: 220rpx;
  height: 140rpx;
  z-index: 1;
}

.img-box .title {
  position: relative;
  z-index: 2;
  font-size: 20rpx;
  color: grey;
  margin-top: 10rpx;
}

.img-box .desc {
  position: relative;
  top: 118rpx;
  color: white;
}

.rest-view {
  width: 80rpx;
  height: 60rpx;
  background-color: #0eaaed;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 44rpx;
  right: -50rpx;
  z-index: 2;
  font-size: 30rpx;
}

.indicate-view {
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  font-size: 50rpx;
  justify-content: center;
  align-items: center;
  color: #0eaaed;
}

.indicate-view .name {
  color: grey;
  font-size: 40rpx;
  margin-bottom: 30rpx;
}

.order-section {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  border-top: 2rpx solid #a0a6aa;
  display: flex;
  font-size: 35rpx;
  background-color: white;
}

.order-section view {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.completed {
  background-color: #0eaaed;
  color: white;
}

.selected {
  border: 2rpx solid red;
  box-shadow: 0 0 5rpx 5rpx red;
}
