page {
  background-color: #e6e8ed;
}

.main-video {
  width: 100%;
  height: 423rpx;
  border-bottom: 2rpx solid #a0a6aa;
}

.analysis-scroll {
  width: 100%;
}

.scroll-item {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.item-title {
  position: absolute;
  left: 22rpx;
  font-size: 35rpx;
  font-weight: bold;
}

.line {
  height: 3rpx;
  width: 190rpx;
  background-color: #a0a6aa;
  position: relative;
  top: 24rpx;
}

.item-content {
  width: 490rpx;
  padding: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #a0a6aa;
  border-radius: 20rpx;
  min-height: 50rpx;
  font-size: 30rpx;
}
